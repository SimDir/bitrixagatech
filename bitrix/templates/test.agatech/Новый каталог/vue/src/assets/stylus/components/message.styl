
.message
  position absolute
  top 10px
  right 10px
  padding 20px
  background purple-grey
  border-radius 10px
  box-shadow 0 0 15px 4px rgba(0,0,0,0.2)
  button
    border none
    outline: none
    margin-right 10px
    padding 8px
    cursor pointer
    background mainFontColor
    color default-color
    transition all .3s
    &:hover
      background red-color
  .close-btn
    position absolute
    top 2px
    right 7px
    display flex
    justify-content center
    align-items center
    padding 0
    width 15px
    height 15px
    line-height 10px
    border-radius: 50%
    margin-right 0
    background transparent
    color mainFontColor
    &:hover
      background red-color
      color default-color